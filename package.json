{
  "name": "mail_box_wallet",
  "version": "0.1.6",
  "description": "Identity-focused crypto wallet browser extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "dev:test-crypto": "tsx scripts/test-crypto.ts",
    "dev:setup": "tsx scripts/dev-setup.ts",
    "dev:test-network": "tsx scripts/test-network.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "mock-dapp": "python3 -m http.server 3000 --directory scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnqh/mail_box_wallet.git"
  },
  "keywords": [
    "wallet",
    "crypto",
    "ethereum",
    "browser-extension",
    "identity"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/johnqh/mail_box_wallet/issues"
  },
  "homepage": "https://github.com/johnqh/mail_box_wallet#readme",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.1.31",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.10",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@noble/ciphers": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^3.0.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@sudobility/components": "^4.0.1",
    "@sudobility/di": "^1.4.23",
    "@sudobility/di_web": "^0.1.1",
    "@sudobility/types": "^1.9.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.6.3",
    "lucide-react": "^0.548.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^16.3.4",
    "react-router-dom": "^7.9.6",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "^5.1.0",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.8"
  }
}
